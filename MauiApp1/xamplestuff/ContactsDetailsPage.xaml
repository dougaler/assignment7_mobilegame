<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="assignment6.ContactsDetailsPage"
             Title="ContactsDetailsPage">
    <Grid RowDefinitions="Auto, Auto,*,*,*" Padding="20">
        <Image Grid.Row="0" x:Name="ContactsImage"/>
        <Label Grid.Row="1" x:Name="LblName" FontSize="Title"/>
        <Label Grid.Row="2" x:Name="LblEmail" FontSize="Subtitle"/>
        <Label Grid.Row="3" x:Name="LblPhoneNumber" FontSize="Subtitle"/>
        <Label Grid.Row="4" x:Name="LblDsc" FontSize="Subtitle"/>
    </Grid>
</ContentPage>